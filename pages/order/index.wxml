<!--pages/order/index.wxml-->
<view class="top">
  <i></i>
  <text>选择时间（可多选时段）</text>
  <view class="order-status">
    <image src="../../img/yued.png" class='order-no order-icon'></image>
    <text class="order-no-text">已约满</text>
  </view>
  <view class="order-status">
    <image src="../../img/yu.png" class='order-yes order-icon'></image>
    <text class="order-yes-text">可预约</text>
  </view>
</view>
<view class="date">
  <view class="date-left">
    <scroll-view class="date-scroll"  scroll-y="true">
    <view>
      <view class="date-item {{index==dateActive?'date-item-active':''}}" wx:for="{{dayList}}" wx:key="{{index}}" bindtap="chooseDate" data-index="{{index}}" data-year="{{item.year}}" data-month="{{item.date}}" data-day="{{item.time}}">
        <text class="date-text">{{item.date<10?('0'+item.date):item.date}}月{{item.time<10?('0'+item.time):item.time}}日</text>
        <text class="time-text">(周 {{item.week}})</text>
      </view>
      </view>
    </scroll-view>
    <view class="pull-btn">
      <icon class="iconfont local"></icon>
    </view>
  </view>
  <scroll-view scroll-y='true' style='height:810rpx;' class="scroll-box">
    <checkbox-group class="date-right clearfix">
    <checkbox wx:for="{{timesList}}" wx:key="{{index}}" class="date-right-item {{item.canSelect==true?'choose-ok':'choose-no'}} {{item.isSelect==1?'choose-active':''}} " bindtap="{{item.canSelect==true?'choose':'chooseEd'}}" data-index="{{index}}" data-timesId="{{item.timesId}}" value="{{item.id}}" data-period="{{item.startTime}}~{{item.endTime}}" data-selected="{{item.selected}}">
    <view class="time-middle">
      <image src="../../img/yued.png" class='yue' wx:if="{{item.canSelect==false}}"></image>
      <image src="../../img/yu.png" class='yue' wx:if="{{(item.canSelect==true)&&(item.isSelect==0)}}"></image>
      <image src="../../img/yub.png" class='yue' wx:if="{{(item.isSelect==1)&&(item.canSelect==true)}}"></image>
    <text>{{item.startTime}}~{{item.endTime}}</text>
    </view>
    </checkbox>
  </checkbox-group>
  </scroll-view>
  
</view>
<view class="meeting">
  <view class="meeting-container">
   <view class="meeting-box">
      <text class="meet-a">使用人：</text>
      <text class="ipt-meet user-ipt {{bfcolorUser==true?'place-meet':''}}" bindtap="changeStatusUser" wx:if="{{changeStatusUserIpt}}">{{theUser}}</text>
      <input placeholder="请添加使用人" placeholder-class='place-meet' maxlength='7' wx:if="{{!changeStatusUserIpt}}" value="{{userName}}" auto-focus="true" bindblur="changeStatusUserBlur" bindinput="inputUserName"></input>
    </view>
    <view class="meeting-box meeting-plus">
      <text class="meet-a">会议主题：</text>
      <text class="ipt-meet theme-ipt {{bfcolorTheme==true?'place-meet':''}}" bindtap="changeStatusTheme" wx:if="{{changeStatusThemeIpt}}">{{theTheme}}</text>
     <textarea class="meet-area" maxlength='20' placeholder=''  placeholder-class='place-meets' wx:if="{{!changeStatusThemeIpt}}"  bindinput='inputTheme' value='{{theme}}'  auto-focus="true" bindblur="changeStatusThemeBlur"></textarea>
       <!-- <text class="ipt-meet theme-ipt {{bfcolorTheme==true?'place-meet':''}}" bindtap="changeStatusTheme" wx:if="{{changeStatusThemeIpt}}">{{theTheme}}</text> -->
    <!-- <input placeholder="请添加会议主题" class="meet-box-ipt" wx:if="{{!changeStatusThemeIpt}}" maxlength='20' auto-focus="true" value="{{theme}}" placeholder-class='place-meet' bindblur="changeStatusThemeBlur" bindinput="inputTheme" ></input> -->
    </view>
  </view>
</view>
<button class="order-btn" bindtap="confirm">确认预约</button>


<vtoast flow="{{complete}}">
  <view class="msg-box complete-box">
  <view class="tips">
        <view class="tips-box">
          <image src="../../img/wanshanxinxi.png"></image>
        </view>
    </view>
    <form class="msg-form">
      <text class="tips-title">完善信息</text>
        <view class="project-item">
        <view class="project">房间号</view>
        <text class="emp">:</text>
        <text class="project-value">{{roomName}}</text>
      </view>
      <view class="project-item">
        <view class="project">姓名</view>
        <text class="emp">:</text>
        <input placeholder="请输入姓名" maxlength='7' placeholder-class='pro-ipt' value="{{name}}" bindinput='nameIpt'></input>
      </view>
      <view class="project-item">
        <view class="project">手机</view>
        <text class="emp">:</text>
        <input placeholder="请输入手机号码" maxlength="11" placeholder-class='pro-ipt'value="{{phoneNumber}}" bindinput='phoneIpt'></input>
      </view>
      <view class="project-item">
        <text class="contact">联系我们：{{phoneNumbers}}</text>
        <icon class="iconfont tips-icon phone" bindtap="makePhone"></icon>
      </view>
      <text class="tips-text">请完善您的信息再进行预约哦</text>
      <button class="confirm firm-btn" bindtap="checkComplete">确认</button>
    </form>
  </view>
</vtoast>
<vtoast flow="{{wrong}}">
  <view class="msg-box wrong-box">
    <view class="tips">
        <view class="tips-box">
          <image src="../../img/cuowu.png"></image>
        </view>
    </view>
    <form class="msg-form">
      <text class="tips-title">错误！</text>
      <text class="tips-first">啊哦～找不到您的信息！</text>
      <text class="tips-secend">请先联系管理员登记信息</text>
      <view class="project-item1">
        <button class="input-again" bindtap="reInput">再次输入</button>
        <button class="exit" bindtap="exit">退出</button>
      </view>
    </form>
  </view>
</vtoast>

<vtoast flow="{{success}}">
  <view class="msg-box success-box">
  <view class="tips">
      <view class="tips-box">
        <image src="../../img/chenggong.png"></image>
      </view>
  </view>
    <form class="msg-form">
      <text class="tips-title">预约成功</text>
      <text class="success-tips">您的会议室预约成功</text>
      <text class="yy-time">预约时间</text>
      <view class="project-items clearfix">
        <text class="yy-date-value">{{month_choose}}月{{day_choose}}日</text>
        <view class="yy-time-value">
          <text wx:for="{{timePeriod}}" wx:key="{{index}}">{{item.startTime}}~{{item.endTime}}</text>
        </view>
      </view>
      <text class="tips-text">请准时到达，有疑问可以联系咨询～</text>
      <button class="confirm" bindtap="success_ok">确认</button>
      <text class="tips-text">详细信息可在个人中心-预约记录查看</text>
    </form>
  </view>
</vtoast>

<vtoast flow="{{yuyue}}">
  <view class="msg-box yuyue-box">
    <view class="tips">
        <view class="tips-box">
          <image src="../../img/cuowu.png"></image>
        </view>
    </view>
    <form class="msg-form">
      <text class="tips-header">该时段已有预约</text>
      <view class="tips-toast">
        <text class="tips-toast-user">预约人：</text>
        <text class="tips-toast-text">{{timeUserName}}</text>
        <text class="tips-toast-text">{{phone}}</text>
      </view>
      <button class="close-btn" bindtap="yuyueEd">关闭</button>
    </form>
  </view>
</vtoast>
