/* pages/personal/history/history.wxss */
page{
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  background: #F8F8F8;
}
.header{
  width: 100%;
  height: 100rpx;
  background: #FFF2F1;
  display: flex;
  align-items: center;
}
.user{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 8rpx 16rpx 0 rgba(0,0,0,0.17);
  margin-left: 80rpx;
}
.user-font{
  font-size: 24rpx;
  color: #000000;
  margin-left: 40rpx;
  font-weight: 600
}
.content{
  width: 694rpx;
}
.item-content{
  margin-top: 30rpx;
}
.yuyue-item-warp{
  position: relative;
  height: 212rpx;
  margin-bottom: 26rpx;
}
.yuyue-item{
  width: 100%;
  background: #FFFFFF;
  border: 2rpx solid #F1F2FB;
  border-radius: 30rpx;
  height: 212rpx;
  overflow: hidden;
  position: absolute;
  z-index: 3;
  transition: left 0.2s ease-in-out;
}
.yuyue-top{
  background: #fff;
  font-size: 34rpx;
  color: #2B3C6A;
  position: relative
}
.yuyue-top-font{
  margin-left: 54rpx;
  margin-top: 22rpx;
}
.yuyue-top-font2{
  margin-left: 54rpx;
  line-height: 56rpx;
}
.yuyue-bottm{
 background: #E5E5E5;
 display: flex;
 align-items: center;
 justify-content: center;
 color: #717D9B;
 font-size: 24rpx;
 height: 70rpx;
 margin-top: 24rpx;
}
/* 预约状态 */
.yuyue-state{
  height: 46rpx;
  width: 200rpx;
  background: #6D7278;
  font-size: 24rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 46rpx;
  transform: rotate(45deg);
  position: absolute;
  right: -54rpx;
  top: 0
}