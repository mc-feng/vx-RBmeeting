/**index.wxss**/
.header{
  width: 100%;
  height: 300rpx;
  background: red;
  border-bottom-right-radius:200rpx 100rpx;
  position: fixed;
  top: 0;
  z-index: 10
}
.item{
  width: 600rpx;
  height: 300rpx;
  background: #fff;
  border-radius: 20%;
  position: relative;
  border: 2px solid #aaa;
  margin-top: 20px;
  overflow: hidden
}
.tiao{
  position: absolute;
  height: 36rpx;
  width: 200rpx;
  background: rgb(10, 182, 10);
  color: rgb(255, 255, 255);
  font-size: 30rpx;
  transform: rotate(45deg);
  right:-60rpx;
  top:30rpx;
  text-align: center;
}
.container{
  padding-top: 300rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.toast{
  height: 300rpx;
  width: 550rpx;
  background: #aaa;
  margin-left: 100rpx;
}
.bottom{
  width: 200rpx;
  height: 100rpx;
  border: 2rpx solid #aaa;
  border-radius: 4px;
}