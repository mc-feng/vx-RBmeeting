/**index.wxss**/
.header{
  width: 100%;
  height: 300rpx;
  background: red;
  border-bottom-right-radius:200rpx 100rpx;
  position: fixed;
  top: 0;
  z-index: 10
}
.container{
  padding-top: 300rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
.toast{
  height: 300rpx;
  width: 550rpx;
  background: #aaa;
  transform: translateY(-50%) translateX(-50%);
}
.bottom{
  width: 200rpx;
  height: 100rpx;
  border: 2rpx solid #aaa;
  border-radius: 4px;
}